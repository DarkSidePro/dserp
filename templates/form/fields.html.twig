{% block form_widget_simple %}
    {% block form_label %} {{label}} {% endblock %}
    <div class='form-group'>
        {% set type = type|default('text') %}
        <input type="{{ type }}" class='form-control' {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %} {% if required %}required{% endif %} placeholder="{% if type == 'email' %}Email{% endif %}"/>
    </div>
{% endblock form_widget_simple %}